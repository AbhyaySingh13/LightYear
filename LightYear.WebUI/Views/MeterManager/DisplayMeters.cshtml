@model LightYear.Core.ViewModels.MeterListViewModel

@{
    ViewBag.Title = "Purchase Meters";
}
<h2>Purchase Meters</h2>

<div class="col-md-2">
    <h4>Filter by Supplier</h4>
    <div class="list-group">
        @Html.ActionLink("All", "DisplayMeters", null, new { @class = Request["MeterSupplier"] == null ? "list-group-item active" : "list-group-item" })
        @foreach (var cat in Model.Suppliers)
        {
            @Html.ActionLink(cat.SupplierName, "DisplayMeters", new { MeterSupplier = cat.SupplierName }, new { @class = Request["MeterSupplier"] == cat.SupplierName ? "list-group-item active" : "list-group-item" })
        }
    </div>
</div>

<div class="col-md-10">

    @foreach (var item in Model.Meters)
    {

        <div class="col-md-2" style="height:400px;width:200px;padding:10px;margin:10px;border: solid thin whitesmoke">
            <div class="col-md-12">
                <img class="img" style="height:220px;width:150px" src="~/Content/MeterImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Supplier</p>
            </div>
            <div class="col-md-12">
                <h4>@String.Format("{0:c}", item.Price)</h4>
            </div>
            <div class="col-md-12">

            </div>
            <div class="col-md-12">
                <a href="" class="btn btn-primary" style="padding:8px;">Add to Basket</a>
            </div>
        </div>
    }
</div>
<div class="col-md-12 clearfix" />